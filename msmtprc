# Set default values for all following accounts.
defaults
auth           on
tls            mailtls
tls_starttls   mailstarttls
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp
aliases        /etc/aliases
domain         maildomain

account        default
host           mailserver
port           mailport
from           mailfrom
user           mailuser
password       mailpassword
